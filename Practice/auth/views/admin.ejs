<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - All Links</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f0f2f5;
        margin: 0;
        padding: 20px;
      }

      h3 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #667eea;
        color: white;
      }

      tr:hover {
        background-color: #f5f5f5;
      }

      a {
        color: #667eea;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .impression {
        font-size: 12px;
        color: #555;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h3>All Links</h3>
      <table>
        <thead>
          <tr>
            <th>Original URL</th>
            <th>Short URL</th>
            <th>Impressions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(link => { %>
          <tr>
            <td>
              <a href="<%= link.originalURL %>" target="_blank">
                <%= link.originalURL %>
              </a>
            </td>
            <td>
              <a href="http://localhost:8000/<%= link.shortID %>" target="_blank">
                http://localhost:8000/<%= link.shortID %>
              </a>
            </td>
            <td class="impression"><%= link.impressions ? link.impressions.length : 0 %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
