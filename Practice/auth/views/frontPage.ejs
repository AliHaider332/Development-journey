<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Short URL Generator</title>
    <style>
      /* Body styling */
      body {
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #667eea, #764ba2);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
      }

      /* Container card */
      .container {
        background: #fff;
        padding: 30px;
        width: 400px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      }

      h1 {
        margin-bottom: 20px;
        color: #333;
      }

      /* Input field */
      input[type="url"] {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        margin-bottom: 15px;
        border-radius: 5px;
        border: 1px solid #ccc;
        outline: none;
      }

      /* Button styling */
      button {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        background: #667eea;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      button:hover {
        background: #5a67d8;
      }

      /* Short URL display */
      .short-url {
        margin-top: 15px;
        font-size: 14px;
        color: green;
      }

      /* User links list */
      .links {
        margin-top: 20px;
        text-align: left;
      }

      .links h3 {
        color: #333;
        margin-bottom: 10px;
      }

      .links ul {
        list-style: none;
        padding: 0;
      }

      .links li {
        background: #f9f9f9;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
        font-size: 14px;
      }

      .links a {
        color: #667eea;
        text-decoration: none;
      }

      .links a:hover {
        text-decoration: underline;
      }

      .impression {
        font-size: 12px;
        color: #555;
        margin-top: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Generate Short URL</h1>

      <!-- Form to generate short URL -->
      <form action="/shorten" method="POST">
        <input
          type="url"
          name="URL"
          placeholder="Enter your long URL"
          required
        />
        <button type="submit">Generate</button>
      </form>

      <!-- Display newly generated short URL -->
      <% if (shortUrl) { %>
      <div class="short-url">
        Short URL:
        <a href="<%= shortUrl %>" target="_blank"><%= shortUrl %></a>
      </div>
      <% } %>

      <!-- List of user's URLs with impressions -->
      <% if (urls && urls.length > 0) { %>
      <div class="links">
        <h3>Your Links</h3>
        <ul>
          <% urls.forEach(u => { %>
          <li>
            <strong>Original:</strong>
            <a href="<%= u.originalURL %>" target="_blank"><%= u.originalURL %></a>
            <br />
            <strong>Short:</strong>
            <a href="http://localhost:8000/<%= u.shortID %>" target="_blank">
              http://localhost:8000/<%= u.shortID %>
            </a>
            <div class="impression">
              Impressions: <%= u.impressions ? u.impressions.length : 0 %>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>
    </div>
  </body>
</html>
