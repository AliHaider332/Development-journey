<header class="bg-blue-600 py-5 pl-10 shadow-lg rounded-b-md">
  <nav class="px-6 flex justify-between">
    <div class="flex">
      <a
        href="./client"
        class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
        >Home</a
      >
      <% if(isLoggedIn) {%>
        <% if( role && role==='guest') {%>
          <a
            href="./userList"
            class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
            >Post List</a
          >
          <a
            href="./favourit"
            class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
            >Favourit</a
          >
          <a
            href="./reserve"
            class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
            >Reserve</a
          >
          <a
            href="./booking"
            class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
            >Booking</a
          >
      <% }%>
      <% if(role && role==='host') {%>
          <a
            href="./server"
            class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
            >Add Post</a
          >
      <% }%>
      <% }%>
    </div>
    <div>
      <% if(!isLoggedIn) {%>
      <a
        href="./register"
        class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
        >Sign Up</a
      >
      <a
        href="/login"
        class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
        >Login</a
      >
      <% }else{%>
      <form action="/logout" method="post">
        <button
          type="submit"
          class="p-1 px-3 rounded-[5px] text-white font-serif capitalize text-[18px] hover:bg-blue-900 transition-all duration-500 ease-in-out"
        >
          Log Out
        </button>
      </form>
      <% }%>
    </div>
  </nav>
</header>
