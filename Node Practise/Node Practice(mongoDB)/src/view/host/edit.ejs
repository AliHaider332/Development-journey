<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../output.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap"
      rel="stylesheet"
    />
    <title>Edit</title>
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      h2 {
        font-family: 'Poppins', sans-serif;
      }
    </style>
  </head>
  <body class="gap-3 flex flex-col bg-gray-50">
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Form -->
    <main class="flex items-center justify-center flex-col gap-5">
      <div class="w-full max-w-lg bg-white shadow-lg rounded-2xl p-8">
        <!-- Title -->
        <h2 class="text-2xl font-bold text-blue-600 text-center mb-6">
          Edit The Data
        </h2>
    
        <!-- Form -->
        <form action="/Host-Post-List" method="post" class="space-y-4" enctype="multipart/form-data">
    
          <!-- House Title -->
          <div>
            <label for="title" class="block text-blue-500 font-medium mb-2">House Title:</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="House Name"
              value="<%= Data.title %>"
              required
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>
    
          <!-- Location -->
          <div>
            <label for="location" class="block text-blue-500 font-medium mb-2">Location:</label>
            <input
              type="text"
              id="location"
              name="location"
              placeholder="Enter Place"
              value="<%= Data.location %>"
              required
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>
    
          <!-- Monthly Rent -->
          <div>
            <label for="rent" class="block text-blue-500 font-medium mb-2">Monthly Rent:</label>
            <input
              type="number"
              id="rent"
              name="rent"
              placeholder="Enter amount"
              value="<%= Data.rent %>"
              required
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>
    
          <!-- Rental Type -->
          <div>
            <label for="type" class="block text-blue-500 font-medium mb-2">Rental Type:</label>
            <select
              id="type"
              name="type"
              required
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="Apartment" <%= Data.type === "Apartment" ? "selected" : "" %>>Apartment</option>
              <option value="House" <%= Data.type === "House" ? "selected" : "" %>>House</option>
              <option value="Room" <%= Data.type === "Room" ? "selected" : "" %>>Room</option>
            </select>
          </div>
    
          <!-- Reference Link -->
          <div>
            <label for="link" class="block text-blue-500 font-medium mb-2 hover:bg-gray-500 cursor-pointer"
            >Reference Img:</label
          >
          <input
            type="file"
            id="link"
            name="link"
            accept="image/png, image/jpeg, image/jpg"
            class="w-full p-3 border border-gray-300 cursor-pointer rounded-lg mb-4 focus:ring-2 focus:ring-blue-500"
          />
          </div>
    
          <!-- Description -->
          <div>
            <label for="description" class="block text-blue-500 font-medium mb-2">Description:</label>
            <textarea
              id="description"
              name="description"
              rows="4"
              placeholder="Describe the Place You Have"
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            ><%= Data.description %></textarea>
          </div>
    
          <!-- Hidden ID -->
          <input type="hidden" name="_id" value="<%= Data._id %>">
    
          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-blue-500 text-white font-semibold py-3 rounded-lg hover:bg-blue-600 transition"
          >
            Submit
          </button>
        </form>
      </div>
    </main>
    
  </body>
</html>
