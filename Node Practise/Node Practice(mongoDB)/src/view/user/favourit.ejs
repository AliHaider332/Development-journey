<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../output.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap"
      rel="stylesheet"
    />
    <title>Favourites</title>
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      h2 {
        font-family: 'Poppins', sans-serif;
      }
    </style>
  </head>
  <body class="gap-3 flex flex-col bg-gray-50">
    <!-- Header -->
    <%- include('partials/header') %>

    <h1 class="text-4xl font-bold text-blue-500 text-center mt-10">
      Favourite Posts
    </h1>

    <!-- Cards -->
    <main
      class="flex flex-col items-center gap-8 w-full md:w-3/4 lg:w-2/3 px-6 py-10"
    >
      <% if (!Data || Data.length === 0) { %>
      <h1 class="text-3xl font-bold text-blue-400 text-center mt-20">
        No Favourites Yet
      </h1>
      <% } else { %> <% Data.forEach(item => { %>
      <div
        class="bg-white shadow-lg rounded-2xl p-6 w-full max-w-4xl hover:shadow-2xl transition-all duration-300 flex gap-6 items-center"
      >
        <!-- Image -->
        <% if (item.link) { %>
        <div class="flex-shrink-0">
          <img
            src="../../uploads/<%= item.link %>"
            alt="<%= item.title %>"
            class="w-40 h-40 object-cover rounded-xl border border-gray-200 shadow-sm"
          />
        </div>
        <% } %>

        <!-- Details -->
        <div class="flex flex-col flex-1">
          <h2 class="text-2xl font-bold text-blue-600 mb-2">
            <%= item.title %>
          </h2>

          <p class="text-gray-700 mb-1">
            <span class="font-semibold text-blue-500">Location:</span> <%=
            item.location %>
          </p>
          <p class="text-gray-700 mb-1">
            <span class="font-semibold text-blue-500">Rent:</span> PKR <%=
            item.rent %> / Month
          </p>
          <p class="text-gray-700 mb-1">
            <span class="font-semibold text-blue-500">Type:</span> <%= item.type
            %>
          </p>

          <!-- Description -->
          <p class="text-gray-600 mt-3 line-clamp-3 leading-relaxed">
            <%= item.description %>
          </p>
          <form action="/fav-remove/<%=item._id%>">
            <button
              class="bg-red-500 text-white font-semibold py-2 px-4 mt-3 rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400 transition cursor-pointer"
              type="submit"
            >
              Remove
            </button>
          </form>
        </div>
      </div>
      <% }); %> <% } %>
    </main>
  </body>
</html>
